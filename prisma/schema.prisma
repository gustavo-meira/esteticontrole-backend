// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  name     String
  email    String    @unique
  password String
  products Product[]
  clients  Client[]
}

model Product {
  id          String  @id @default(uuid())
  name        String
  price       Float
  description String?
  user        User    @relation(fields: [userId], references: [id])
  userId      String
}

model Client {
  id             String   @id @default(uuid())
  name           String
  birthDate      DateTime
  telephone      String
  recommendation String?
  user           User     @relation(fields: [userId], references: [id])
  userId         String
}
